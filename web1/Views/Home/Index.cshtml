@model IEnumerable<web1.Models.SanPham_ID>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
        </ol>
    </nav>
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-bottom: 20px">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Assets/images/vostro.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Assets/images/bannerTP.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Assets/images/fugitsu.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xl-3 col-sm-6">
            <div class="card">
                <img src="@Url.Content("~/Assets/images/" + item.image)" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </h5>
                    <p class="card-text text-danger text-center">@Html.DisplayFor(modelItem => item.Gia) VND</p>
                    <div class="b_button_card">
                        
                        <a class="btn btn-sm btn-detail" href="@Url.Action("Details", new { id = item.ID })">Chi tiết</a>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("OrderNow", "ShoppingCart", new { id = item.ID }, null)">Thêm vào giỏ hàng</a>
                        
                    </div>
                </div>
            </div>  
        </div>
    }
</div>
<div class="row">
    <nav aria-label="Page navigation" class="mx-auto" ">
        <ul class="pagination >
            @if (@ViewBag.NumPages != null && @ViewBag.NumPages > 1)
            {
                <li class="page-item"><a class="page-link" href="Index?page=1"><<</a></li>
                for (int i = 1; i <= @ViewBag.NumPages; i++)
                {
                    <li class="page-item"><a class="page-link" href="Index?page=@i">@i</a></li>
                }
                <li class="page-item"><a class="page-link" href="Index?page=@ViewBag.NumPages">>></a></li>
            }

        </ul>
    </nav>
</div>
